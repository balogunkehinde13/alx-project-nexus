datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdBy   String
  creatorName String
  createdAt   DateTime @default(now())
  isClosed    Boolean  @default(false)

  options     Option[]
  votes       Vote[]    // complete vote logs for analytics + fraud detection
}

model Option {
  id      String   @id @default(cuid())
  text    String
  votes   Int      @default(0)    // fast numeric counter
  pollId  String
  poll    Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)

  voteLog Vote[]   // vote records tied to this option
}

model Vote {
  id        String @id @default(cuid())
  pollId    String
  optionId  String
  voterId   String

  poll      Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option    Option @relation(fields: [optionId], references: [id], onDelete: Cascade)
}



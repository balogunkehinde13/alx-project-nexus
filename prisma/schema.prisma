datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id          String   @id @default(cuid())
  title       String
  description String?
  options     Option[]
  createdBy   String
  creatorName String
  createdAt   DateTime @default(now())
  isClosed    Boolean  @default(false)
}

model Option {
  id      String @id @default(cuid())
  text    String
  votes   Int    @default(0)
  pollId  String
  poll    Poll   @relation(fields: [pollId], references: [id])
}
